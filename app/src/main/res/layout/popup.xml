<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        android:columnCount="20"
        android:padding="10dp">


        <TextView
            android:id="@+id/txtquoteoftheday"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="97dp"
            android:fontFamily="@string/pref_description_social_recommendations"
            android:text="QUOTE OF THE DAY:"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtquote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:textColor="@color/colorToggle"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnthanks"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/txtquote"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="68dp"
            android:shadowColor="@color/colorAccent"
            android:text="Thank you!"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_above="@+id/btnthanks"
            android:layout_below="@id/txtquote"
            android:layout_marginBottom="29dp"
            android:layout_marginEnd="-63dp"
            android:layout_toStartOf="@+id/txtquoteoftheday"
            android:textColor="@color/colorToggle" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="208dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/iconmot" />


    </RelativeLayout></RelativeLayout>